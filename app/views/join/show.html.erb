<div id="main-content" role="main" itemprop="mainContentOfPage">
		  	<section>
			<div id="page" class="container">
				<div class="page-header">
					<div class="row">
						<div class="col-xs-12 col-md-12">
							<h1 class="blue">Join NOW</h1>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-12 col-md-12 sm-marB20">
						<div class="panel panel-default">
	  						<div class="panel-body">
	  							<div class="row">
		  							<div class="col-xs-12 col-md-12 sm-marB20">
										<div class="progress">
											<div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100" style="width: 66%;">
											Your Info
											</div>
										</div>
									</div>
									<div class="col-xs-12 col-md-12 sm-marB20">

											<%= form_tag({:id => 'join_SFDCLabs', controller: "join", action: "createMembership", method: "post"},{class: "form-horizontal"}) do %>

											<%= hidden_field_tag 'tier', params[:id] %>
											<fieldset>
												<div class="row">
													<div class="col-xs-12 col-md-8">
														<h3>Your Name</h3>
														<hr>
														<div class="form-group">
															<label for="prefix" class="col-sm-2 control-label">Prefix</label>
															<div class="col-sm-2">
															<%= select_tag "prefix", "<option>Select</option><option>Mr</option><option>Mrs</option><option>Ms</option><option>Dr</option>".html_safe, { :class => 'form-control' } %>


															</div>
														</div>
														<div class="form-group">
															<label for="firstname" class="col-sm-2 control-label">First Name</label>
															<div class="col-sm-8">
																<%= text_field_tag 'firstname', nil, class: 'form-control', required: true %>
															</div>
														</div>
														<!-- <div class="form-group">
															<label for="mi" class="col-sm-2 control-label">MI</label>
															<div class="col-sm-2">
																<%#= text_field_tag 'mi', nil, class: 'form-control', required: false %>
															</div>
														</div> -->
														<div class="form-group">
															<label for="lastname" class="col-sm-2 control-label">Last Name</label>
															<div class="col-sm-8">
																<%= text_field_tag 'lastname', nil, class: 'form-control', required: true %>
															</div>
														</div>


														<h3>Contact Information</h3>
														<p>We will send your Membership card to this address.</p>
														<hr>
														<div class="form-group">
															<label for="streetAddress" class="col-sm-2 control-label">Street Address</label>
															<div class="col-sm-8">
																<%= text_field_tag 'streetAddress', nil, class: 'form-control', required: true %>
															</div>
														</div>
														<!-- <div class="form-group">
															<label for="aptUnit" class="col-sm-2 control-label">Apt/Unit #</label>
															<div class="col-sm-8">
																<%#= text_field_tag 'aptUnit', nil, class: 'form-control', required: false %>
															</div>
														</div> -->
														<div class="form-group">
															<label for="city" class="col-sm-2 control-label">City</label>
															<div class="col-sm-8">
																<%= text_field_tag 'city', nil, class: 'form-control', required: true %>
															</div>
														</div>
														<div class="form-group">
															<label for="state" class="col-sm-2 control-label">State</label>
															<div class="col-sm-2">
																<%= select_tag "state", "<option>DELHI</option><option>HARAYANA</option><option>UP</option><option>UK</option><option>PUNJAB</option>".html_safe, { :class => 'form-control' } %>

															</div>
														</div>
														<div class="form-group">
															<label for="state" class="col-sm-2 control-label">Country</label>
															<div class="col-sm-2">
																<%= select_tag "state", "<option>INDIA</option>".html_safe, { :class => 'form-control' } %>

															</div>
														</div>
														<div class="form-group">
															<label for="email" class="col-sm-2 control-label">Email</label>
															<div class="col-sm-8">
																<%= email_field_tag 'email', nil, class: 'form-control', required: true %>
															</div>
														</div>
														<div class="form-group">
															<label for="emailConfirm" class="col-sm-2 control-label">Confirm Email</label>
															<div class="col-sm-8">
																<%= email_field_tag 'emailConfirm', nil, class: 'form-control', required: true %>
															</div>
														</div>
														<div class="form-group">
															<label for="phone" class="col-sm-2 control-label">Home Phone</label>
															<div class="col-sm-8">
																<%= telephone_field_tag 'phone', nil, class: 'form-control', required: true %>
															</div>
														</div>
														<hr>
														<span class="help"><i class="indicator"></i><a href=""> = denotes required field</a></span>
													</div>
													<div class="col-xs-12 col-md-4">
														<h3>Selected Membership</h3>
														<hr>
														<img class="formCard" src="<%= @MembershipTier.membermgmt__image__c %>">
														<h4>SFDCLabs Membership <%= @MembershipTier.name %></h4>
														<div class="row">
																<div class="col-xs-8 col-md-8">
																	<p>1st Member:</p>
																</div>
																<div class="col-xs-4 col-md-4">
																	<p>₹<%= number_with_precision(@MembershipTier.membermgmt__first_member__c, :precision => 0, :delimiter => ',') %></p>
																</div>
															</div>
															<div class="row">
																<div class="col-xs-8 col-md-8">
																	<p>1st Additional Member:</p>
																</div>
																<div class="col-xs-4 col-md-4 red">
																	<p>First Year ₹<%= number_with_precision(@MembershipTier.membermgmt__first_additional_member__c, :precision => 0, :delimiter => ',') %></p>
																</div>
															</div>
															<div class="row">
																<div class="col-xs-8 col-md-8">
																	<p>Each Additional Member:</p>
																</div>
																<div class="col-xs-4 col-md-4">
																	<p>₹<%= number_with_precision(@MembershipTier.membermgmt__each_additional_member__c, :precision => 0, :delimiter => ',') %></p>
																</div>
															</div>
													</div>
												</div>
												<div class="row">
													<div class="col-xs-12 col-md-12">
														<hr>
													</div>
												</div>
												<div class="row">
													<div class="col-xs-12 col-md-6">
														<%= link_to "Back", :back,  :class => "btn btn-default grayBGdark"%>
													</div>
													<div class="col-xs-12 col-md-6 txt-right">
															<%= submit_tag("Continue", :class => "btn btn-default") %>
													</div>
												</div>
											</fieldset>
										<% end %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		</div> <!-- /main -->
